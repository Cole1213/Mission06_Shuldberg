@model Class
@{
    ViewData["Title"] = "Add A Film";
}

<header>
    <h1>Add a Movie</h1>
</header>
<div class="center-form">
<form id="movieForm" method="post">
    <input type="hidden" asp-for="MovieId"/>
    <input type="hidden" asp-for="Category" />
    <div class="form-group">
        <label asp-for="CategoryId">Category:</label>
        <select asp-for="CategoryId">
            <option value="999">Select a category</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Title">Title:</label>
        <input type="text" asp-for="Title" required>
    </div>
    <div class="form-group">
        <label asp-for="Year">Year:</label>
        <input type="text" asp-for="Year">
    </div>
    <div class="form-group">`
        <label asp-for="Director">Director:</label>
        <input type="text" asp-for="Director">
    </div>
    <div class="form-group">
        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Edited">Edited:</label>
        <select asp-for="Edited">
        <option value="true">Yes</option>
        <option value="false">No</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="CopiedToPlex">Copied to Plex:</label>
        <select asp-for="CopiedToPlex">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="LentTo">Lent-To:</label>
        <input type="text" asp-for="LentTo">
    </div>
    <div class="form-group">
        <label asp-for="Notes">Notes:</label>
        <textarea asp-for="Notes" maxlength="25"></textarea>
    </div>
    <button type="submit">Submit</button>

    <div asp-validation-summary="All"></div>
</form>
</div>