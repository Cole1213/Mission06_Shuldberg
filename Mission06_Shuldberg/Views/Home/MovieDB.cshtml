@model List<Class>

<table>

    <thead class="fw-bold">
        <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Year</th>
            <th>Director</th>
            <th>Rating</th>
            <th>Edited</th>
            <th>Copied to Plex</th>
            <th>Lent to</th>
            <th>Notes</th>
        </tr>
    </thead>
 
    @foreach (var x in Model)
    {
        <tbody>
            <tr>
                <td>@x.Title</td>
                @foreach (Category c in ViewBag.Categories)
                {
                    if (c.CategoryId == x.CategoryId)
                    {
                        <td>@c.CategoryName</td>
                    }
                }
                <td>@x.Year</td>
                <td>@x.Director</td>
                <td>@x.Rating</td>
                <td>@x.Edited</td>
                <td>@x.CopiedToPlex</td>
                <td>@x.LentTo</td>
                <td>@x.Notes</td>

                <td>
                    <a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@x.MovieId">Edit</a>
                </td>
                <td>
                    <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@x.MovieId">Delete</a>
                </td>
            </tr>
        </tbody>
    }
</table>
